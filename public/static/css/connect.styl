body
	background-color #f6f6f6
	margin 0
	font-size 14px

.mtop16 
	margin-top 16px

.box
	background-color #fff
	border 1px solid #d6d6d6
	border-radius 8px
	width 500px
	position: absolute
	.btn-success
		background-color #E85722
		border: 0px
		width 100%
	.form-control
		&:focus
		&:active
			outline: none
			box-shadow: none
	.inside
		padding 16px
	.header
		padding 16px
		background-color #e85722
		border-radius 8px 8px 0 0
		a
			img
				display block
				margin 0 auto
				// width 36%
				width 56%
	.footer
		text-align center
		a
			display inline-block 
			font-size 0.8em
			&:last-child
				margin-left 24px
			 

.box-login
	left: calc(50% - 250px)
	top calc(50% - 220px)

// prueba de comentario
.box-register
	left: calc(50% - 250px)
	top calc(50% - 380px)
