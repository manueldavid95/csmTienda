body
	align-items: center
	background-color #f6f6f6
	display: flex
	margin 0
	font-size 14px
	justify-content: center
	min-height: 100vh	

.mtop16 
	margin-top 16px

.box
	background-color #fff
	border 1px solid #d6d6d6
	border-radius 8px
	width 500px
	position: relative
	.btn-success
		background-color #E85722
		border: 0px
		width 100%
	.form-control
		&:focus
		&:active
			outline: none
			box-shadow: none
	.inside
		padding 16px
	.header
		padding 16px
		background-color #e85722
		border-radius 8px 8px 0 0
		a
			img
				display block
				margin 0 auto
				// width 36%
				width 56%
	.footer
		text-align center
		a
			display inline-block 
			font-size 0.8em
			&:last-child
				margin-left 24px
			 

// media query
// @media only screen and (max-width: 728px)
@media only screen and (max-width: 728px)
	.box
		width 88%